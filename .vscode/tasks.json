{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: build",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "main.cpp",
        "-o",
        "${workspaceFolder}/main.out"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
